#!/usr/bin/env bash

fa_calendar_o='\U000f133'

dow=`date '+%a'`
dom=`date '+%d'`
mon=`date '+%b'`
year=`date '+%Y'`

echo -e "<span foreground='#48c9b0' font_desc='EmojiSymbols'>$fa_calendar_o</span>"\
	 "<span foreground='#fdfefe'>$dow</span>"\
	 "<span foreground='#48c9b0' size='x-large'>$dom</span>"\
	 "<span foreground='#fdfefe'>$mon $year</span>"

exit 0
